{
  "name": "ireporter-api",
  "version": "1.0.0",
  "description": "iReporter enables any/every citizen to bring any form of corruption to the notice of appropriate authorities and the general public. Users can also report on things that needs government intervention",
  "main": "src/app.js",
  "scripts": {
    "start": "env NODE_ENV=production node ./build/app.js",
    "prestart": "npm run build",
    "prebuild": "rm -rf build/*",
    "build": "babel -d ./build ./src",
    "serve": "nodemon --exec babel-node src/app.js",
    "test": "env NODE_ENV=test nyc --reporter=text mocha ./test/**/*.spec.js --timeout=10000 --exit",
    "coverage": "nyc report --reporter=lcov --reporter=text-lcov | coveralls",
    "cover": "nyc report --reporter=lcov --reporter=text-lcov",
    "lint:init": "eslint --init",
    "createdb": "psql -f ./src/utils/database/db.sql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LordUche/iReporter-API.git"
  },
  "author": "Uchenna A. Iheanacho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LordUche/iReporter-API/issues"
  },
  "homepage": "https://github.com/LordUche/iReporter-API#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "factory-girl": "^5.0.4",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3"
  },
  "dependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/register": "^7.0.0",
    "bcrypt": "^3.0.2",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "google-libphonenumber": "^3.2.2",
    "helmet": "^3.15.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.7",
    "pg-promise": "^8.5.3"
  },
  "nyc": {
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ],
    "include": [
      "src/**/*.js"
    ]
  }
}
